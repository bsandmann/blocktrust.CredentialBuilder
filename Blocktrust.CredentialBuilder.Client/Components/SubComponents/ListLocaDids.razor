@using Blocktrust.CredentialBuilder.Client.Models
@using Blocktrust.CredentialBuilder.Client.Components.Helpers
<MudPaper Class="pa-2">
    @foreach (var localDid in Agent.LocalDids.Dids)
    {
        <MudText Typo="Typo.body2">
            <MudStack Row="true">
                <strong>
                    @(localDid.IsPublished ? "Published: " : "Local: ")
                </strong>
                <Ellipsis StringContent="@localDid.Did" IncludeCopyIcon="true" StringLength="20"/>
            </MudStack>
        </MudText>
    }
</MudPaper>

@code {

    [Parameter]
    public Agent Agent { get; set; }

}